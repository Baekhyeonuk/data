<script>

	$(document).ready(function(){

	$("#btn1").click(function(){
	alert("Text: " + $("p").text());
	});

	$("#btn2").click(function(){
	alert("HTML: " + $("p").html());
	// 첫번째 요소의 html 포함 텍스트 반환
	});

	});

</script>
